<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+android:id/drink_order_inlayout" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="10dp"
	android:orientation="horizontal">

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="0.5">
		<com.wikispaces.es1011.gamemenu.LinearListView
			android:id="@+android:id/drink_riepilogo" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:background="#000000"
			android:gravity="center" android:orientation="vertical"
			android:textSize="10sp" android:layout_marginBottom="20dp" />
	</ScrollView>

	<LinearLayout android:id="@+android:id/drink_bottompanel"
		android:orientation="vertical" android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:layout_weight="0.5"
		android:layout_margin="10dp">

		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="0.3">

			<TextView android:text="Total item count:" android:gravity="left"
				android:background="#000000" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_weight="0.3">
			</TextView>

			<TextView android:id="@+android:id/drink_order_lbl_totdrink"
				android:text="0" android:gravity="right" android:background="#000000"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="0.7">
			</TextView>
		</LinearLayout>

		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="0.3">

			<TextView android:text="Order grand total:" android:gravity="left"
				android:background="#000000" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_weight="0.3">
			</TextView>

			<TextView android:id="@+android:id/drink_order_lbl_totcash"
				android:text="0 EUR" android:gravity="right" android:background="#000000"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="0.7">
			</TextView>
		</LinearLayout>

		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_weight="0.2">

			<Button android:id="@+android:id/drink_order_btn_clear"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:layout_weight="0.5" android:text="Clear" android:gravity="center"
				android:layout_marginRight="5dp" android:background="@drawable/btn_redbg">
			</Button>

			<Button android:id="@+android:id/drink_order_btn_send"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:layout_weight="0.5" android:text="Send" android:gravity="center"
				android:layout_marginLeft="5dp" android:background="@drawable/btn_greenbg">
			</Button>

		</LinearLayout>

		<Button android:id="@+android:id/drink_order_btn_back"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:text="&lt;&lt; Back" android:gravity="center"
			android:layout_weight="0.2">
		</Button>
	</LinearLayout>

</LinearLayout>