<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+android:id/drink_order"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:orientation="vertical">
    
    <LinearLayout
    	android:id="@+android:id/uno"
		android:orientation="horizontal"
      	android:layout_width="fill_parent"
      	android:layout_height="fill_parent"
      	android:layout_weight="6">
      	
      	<TextView
      		android:id="@+android:id/due"
      		android:text="lista drink"
      		android:gravity="center"
          	android:background="#0aa000"
          	android:layout_width="fill_parent"
          	android:layout_height="fill_parent"
          	android:layout_weight="1">
      	</TextView>
      	
      	<Button
      		android:id="@+android:id/tre" 
      		android:layout_width="fill_parent"
      		android:layout_height="fill_parent"
      		android:layout_weight="3"
      		android:text="button"
      		android:gravity="center">
      	</Button>
      	
    </LinearLayout>
    
    <ListView
    	android:id="@+android:id/quattro"
    	android:isScrollContainer="true"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:background="#0aaaa0"
    	android:gravity="center"
    	android:entries="@array/name_array"
    	android:textSize="10sp"
    	>  
    </ListView>
    
</LinearLayout>